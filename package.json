{
  "name": "schale-ledger",
  "private": true,
  "packageManager": "bun@1.3.5",
  "workspaces": [
    "services/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "cd services/app && bun run dev",
    "build": "cd services/app && bun run build",
    "check": "cd services/app && bun run check",
    "test": "bun test",
    "db:migrate": "bun run scripts/migrate.ts",
    "db:migrate:dev": "DATABASE_URL=$NEON_DATABASE_URL_DEV bun run db:migrate",
    "db:migrate:prod": "DATABASE_URL=$NEON_DATABASE_URL_PROD bun run db:migrate",
    "deploy:dev": "cd services/app && bun run deploy:dev",
    "deploy:prod": "cd services/app && bun run deploy:prod"
  },
  "devDependencies": {
    "@types/node": "^24.9.1",
    "@types/pg": "^8.15.6",
    "drizzle-orm": "^0.44.7",
    "pg": "^8.16.3",
    "typescript": "^5.9.3"
  }
}
